%h1= @player.username
.row
  .col-sm-6
    - if @shared_groups.any?
      - if @player == current_player
        %h3 Groups you're in
      - else
        %h3 Groups you're both in
      %ul.shared-groups
        - @shared_groups.each do |group|
          %li= link_to group.name, group
    %h3 Stats
    %ul.player-stats
      %li #{number_with_precision(@player.points, precision: 0)} Points
      %li Ranked ##{@player.ranking}/#{Player.count}
      %li Has played #{pluralize @player.games_count, "game"}
  .col-sm-6
    %h3 Games #{@player.username} has played in
    - if @player.games.any?
      .games
        = render partial: "games/game", collection: @player.confirmed_games

    - else
      .well #{@player.username} hasn't played any games yet!
