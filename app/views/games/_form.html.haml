= form_for(@game) do |f| 
  - if @game.errors.any? 
    #error_explanation.alert.alert-danger
      %h4 Please fix the #{pluralize(@game.errors.count, "problem")} below and submit again:

      %ol
        - @game.errors.full_messages.each do |msg| 
          %li= msg

  .row
    .col-md-6
      %h4 Winners
      .form-group
        = text_field_tag "game[winner_usernames][]", @game.winner_usernames[0], :placeholder => "username", :class => "form-control player-input"
      .form-group
        = text_field_tag "game[winner_usernames][]", @game.winner_usernames[1], :placeholder => "username", :class => "form-control player-input"

    .col-md-6
      %h4 Losers
      .form-group
        = text_field_tag "game[loser_usernames][]", @game.loser_usernames[0], :placeholder => "username", :class => "form-control player-input"
      .form-group
        = text_field_tag "game[loser_usernames][]", @game.loser_usernames[1], :placeholder => "username", :class => "form-control player-input"

  .actions
    = f.submit :class => "btn btn-primary", :value => "Save Game" 
