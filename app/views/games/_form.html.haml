= form_for(@game) do |f| 
  - if @game.errors.any? 
    #error_explanation
      %h2 #{pluralize(@game.errors.count, "error")} prohibited this game from being saved:

      %ul
        - @game.errors.full_messages.each do |msg| 
          %li= msg

  %h4 Winners
  = f.fields_for :winning_participations do |builder|
    .form-group
      = builder.text_field :username, :placeholder => "username", :class => "form-control"

  %h4 Losers
  = f.fields_for :losing_participations do |builder|
    .form-group
      = builder.text_field :username, :placeholder => "username", :class => "form-control"

  .actions
    = f.submit :class => "btn btn-primary" 
